
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <mapping package="com.dstevens"/>
    
    <mapping class="com.dstevens.characters.PlayerCharacter"/>
    <mapping class="com.dstevens.characters.traits.changes.TraitChange"/>
    <mapping class="com.dstevens.characters.traits.attributes.AttributeValue"/>
    <mapping class="com.dstevens.characters.traits.experience.ExperienceAward"/>
    <mapping class="com.dstevens.characters.traits.experience.Experience"/>
    
    <mapping class="com.dstevens.characters.traits.backgrounds.CharacterBackground"/>
    <mapping class="com.dstevens.characters.traits.skills.CharacterSkill"/>
    <mapping class="com.dstevens.characters.traits.powers.disciplines.CharacterDiscipline"/>
    <mapping class="com.dstevens.characters.traits.powers.magic.thaumaturgy.CharacterThaumaturgy"/>
    <mapping class="com.dstevens.characters.traits.powers.magic.necromancy.CharacterNecromancy"/>
    <mapping class="com.dstevens.characters.traits.distinctions.flaws.CharacterFlaw"/>
    <mapping class="com.dstevens.characters.traits.distinctions.merits.CharacterMerit"/>
    <mapping class="com.dstevens.characters.traits.status.CharacterStatus"/>
    <mapping class="com.dstevens.characters.traits.attributes.focuses.SetPhysicalFocus"/>
    <mapping class="com.dstevens.characters.traits.attributes.SetAttributeValue"/>
    
  </session-factory>
</hibernate-configuration>

<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <mapping package="com.dstevens"/>
    
    <mapping class="com.dstevens.event.Event"/>
    
    <mapping class="com.dstevens.character.PlayerCharacter"/>
    <mapping class="com.dstevens.character.trait.change.TraitChange"/>
    <mapping class="com.dstevens.character.trait.TraitQualities"/>
    <mapping class="com.dstevens.character.trait.attribute.AttributeValue"/>
    <mapping class="com.dstevens.character.trait.experience.ExperienceAward"/>
    
    <mapping class="com.dstevens.character.trait.background.CharacterBackground"/>
    <mapping class="com.dstevens.character.trait.skill.CharacterSkill"/>
    <mapping class="com.dstevens.character.trait.power.discipline.CharacterDiscipline"/>
    <mapping class="com.dstevens.character.trait.distinction.flaw.CharacterFlaw"/>
    <mapping class="com.dstevens.character.trait.distinction.merit.CharacterMerit"/>
    <mapping class="com.dstevens.character.trait.status.CharacterStatus"/>
    
    
  </session-factory>
</hibernate-configuration>